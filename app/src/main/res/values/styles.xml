<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tenor_sdk_primary_color</item>
        <item name="colorPrimaryDark">@color/tenor_sdk_primary_dark_color</item>
        <item name="colorControlHighlight">@color/tenor_sdk_primary_color</item>
        <item name="colorAccent">@color/tenor_sdk_primary_dark_color</item>
    </style>

    <style name="AppTheme.SelectableItemRippleTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/tenor_sdk_primary_color</item>
    </style>

    <style name="AppTheme.SelectableItemBackground">
        <item name="android:theme">@style/AppTheme.SelectableItemRippleTheme</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
